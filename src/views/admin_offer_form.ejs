<section class="card">
  <h1>New Offer</h1>
  <form method="post" action="/admin/offer/new">
    <label>Employee ID
      <input type="text" name="employee_code" required />
    </label>
    <label>Offer Content
      <textarea name="content" rows="12" placeholder="Write the offer letter here..." required></textarea>
    </label>
    <button type="submit">Save Draft</button>
  </form>
</section>


