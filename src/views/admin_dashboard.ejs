<div class="flex-between">
  <h1>Admin Dashboard</h1>
  <div>
    <a class="btn" href="/admin/offer/new">New Offer</a>
    <a class="btn" href="/admin/employees">Employees</a>
    <a class="btn" href="/admin/terms">Terms</a>
    <a class="btn" href="/admin/logout">Logout</a>
  </div>
  </div>

<section class="card">
  <h2>Offers</h2>
  <table>
    <thead>
      <tr>
        <th>ID</th><th>Employee ID</th><th>Status</th><th>Published</th><th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% (offers || []).forEach(o => { %>
        <tr>
          <td><%= o.id %></td>
          <td><%= o.employee_code %></td>
          <td><%= o.status %></td>
          <td><%= o.published_at || '-' %></td>
          <td>
            <% if (o.status === 'draft') { %>
              <form method="post" action="/admin/offer/<%= o.id %>/publish" style="display:inline">
                <button type="submit">Publish</button>
              </form>
            <% } else { %>
              <a href="/employee/offer/<%= o.id %>" target="_blank">View</a>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>


